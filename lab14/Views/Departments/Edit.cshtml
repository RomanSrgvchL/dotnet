@model lab14.Models.Department

@{
    ViewData["Title"] = "Edit Department";
}

<h1>Edit Department</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Name *</label>
                <input asp-for="Name" class="form-control" maxlength="255" required />
                <small class="form-text text-muted">Max 255 characters</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Location" class="control-label">Location *</label>
                <input asp-for="Location" class="form-control" maxlength="200" required />
                <small class="form-text text-muted">Max 200 characters</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Budget" class="control-label">Budget *</label>
                <input asp-for="Budget" class="form-control" type="number" required min="0" max="100000000" />
                <small class="form-text text-muted">Between 0 and 100,000,000</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmentType" class="control-label">Department Type *</label>
                <select asp-for="DepartmentType" class="form-select" required>
                    <option value="">-- Select Type --</option>
                    <option>Production</option>
                    <option>Service</option>
                    <option>Support</option>
                    <option>Management</option>
                    <option>Administrative</option>
                </select>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
            </div>
        </form>
    </div>
</div>
