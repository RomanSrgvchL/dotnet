@model lab14.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>

<h3>Are you sure you want to delete this employee?</h3>

<div>
    <h4>Employee Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Full Name
        </dt>
        <dd class="col-sm-9">
            @Model.FullName
        </dd>

        <dt class="col-sm-3">
            Position
        </dt>
        <dd class="col-sm-9">
            @Model.Position
        </dd>

        <dt class="col-sm-3">
            Department
        </dt>
        <dd class="col-sm-9">
            @Model.Department?.Name
        </dd>

        <dt class="col-sm-3">
            Photo
        </dt>
        <dd class="col-sm-9">
            @if (Model.Photo != null && Model.Photo.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)"
                     alt="Employee Photo"
                     style="max-width: 200px; max-height: 200px; border-radius: 8px; box-shadow: 0 0 5px rgba(0,0,0,0.2);" />
            }
            else
            {
                <span class="text-muted">No photo available</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>
